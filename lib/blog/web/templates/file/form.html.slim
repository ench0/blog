=form_for @changeset, @action, [multipart: true, class: "ui form"], fn f ->
  =if @changeset.action do
    .alert.alert-danger
      p Oops, something went wrong! Please check the errors below.
  
  =if !@new do
    =link @file.name, to: file_path @conn, :show, @file 

  .form-group
    =label f, :file, class: "control-label"
    =file_input f, :file, class: "form-control"
    / , multiple: "multiple"
    =error_tag f, :file

  .form-group
    =label f, :name, class: "control-label"
    =text_input f, :name, class: "form-control"
    =error_tag f, :name

  / - if @post_id != "" do id=@post_id else id = @page_id end
  .form-group
    =label f, :post_id
    =text_input f, :post_id, value: @post_id, class: "form-control"
    =error_tag f, :post_id

  .form-group
    =label f, :page_id
    =text_input f, :page_id, value: @page_id, class: "form-control"
    =error_tag f, :page_id

  .form-group
    =submit "Submit", class: "btn btn-primary"
